{
  "name": "pick-rivals",
  "version": "0.1.0",
  "private": true,
  "packageManager": "pnpm@9.1.0",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "clean": "turbo clean && rm -rf node_modules",
    "dev:api": "turbo dev --filter=@pick-rivals/api",
    "dev:mobile": "turbo dev --filter=@pick-rivals/mobile",
    "db:generate": "pnpm --filter @pick-rivals/api db:generate",
    "db:migrate": "pnpm --filter @pick-rivals/api db:migrate",
    "db:push": "pnpm --filter @pick-rivals/api db:push",
    "db:studio": "pnpm --filter @pick-rivals/api db:studio"
  },
  "devDependencies": {
    "turbo": "^2.3.0",
    "typescript": "^5.3.3"
  }
}
