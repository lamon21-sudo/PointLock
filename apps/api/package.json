{
  "name": "@pointlock/api",
  "version": "0.1.0",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "build": "tsc",
    "start": "node dist/index.js",
    "clean": "rm -rf dist",
    "lint": "eslint src --ext .ts",
    "db:generate": "prisma generate",
    "db:migrate": "prisma migrate dev",
    "db:push": "prisma db push",
    "db:studio": "prisma studio",
    "db:seed": "tsx prisma/seed.ts",
    "db:seed:e2e": "tsx prisma/seed-e2e.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:unit": "vitest run --exclude '**/*.integration.test.ts' --exclude '**/*.e2e.test.ts'",
    "test:integration": "vitest --config vitest.config.integration.ts --run",
    "test:integration:watch": "vitest --config vitest.config.integration.ts",
    "test:integration:coverage": "vitest --config vitest.config.integration.ts --run --coverage",
    "test:e2e": "vitest --config vitest.config.e2e.ts --run",
    "test:e2e:watch": "vitest --config vitest.config.e2e.ts",
    "test:e2e:coverage": "vitest --config vitest.config.e2e.ts --run --coverage",
    "test:coverage": "vitest run --coverage",
    "test:ui": "vitest --ui",
    "test:docker": "docker-compose -f docker-compose.test.yml up -d && vitest run && docker-compose -f docker-compose.test.yml down",
    "test:infra:up": "docker-compose -f docker-compose.test.yml up -d",
    "test:infra:down": "docker-compose -f docker-compose.test.yml down -v",
    "test:db:push": "dotenv -e .env.test -- prisma db push",
    "test:db:reset": "dotenv -e .env.test -- prisma migrate reset --force",
    "test:odds": "tsx scripts/test-odds-connection.ts",
    "test:calculator": "tsx src/lib/odds-calculator.test.ts",
    "test:slips": "tsx src/modules/slips/slips.service.test.ts",
    "test:tier": "tsx src/lib/tier.service.test.ts",
    "load:setup": "tsx load/setup-load-test-users.ts",
    "load:setup:clean": "tsx load/setup-load-test-users.ts --clean",
    "load:validate": "tsx load/validate-setup.ts",
    "load:test": "k6 run load/matchmaking-queue.k6.js",
    "load:test:json": "k6 run --out json=load-test-results.json load/matchmaking-queue.k6.js",
    "load:test:critical": "k6 run load/critical-paths.k6.js",
    "load:test:all": "k6 run load/matchmaking-queue.k6.js && k6 run load/critical-paths.k6.js"
  },
  "dependencies": {
    "@pick-rivals/shared-types": "workspace:*",
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.38.0",
    "@socket.io/redis-adapter": "^8.3.0",
    "axios": "^1.7.9",
    "bcrypt": "^5.1.1",
    "bullmq": "^5.66.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "express-rate-limit": "^8.2.1",
    "helmet": "^8.0.0",
    "ioredis": "^5.8.2",
    "jsonwebtoken": "^9.0.2",
    "pino": "^10.3.1",
    "pino-http": "^11.0.0",
    "rate-limit-redis": "^4.3.1",
    "socket.io": "^4.8.3",
    "uuid": "^10.0.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/compression": "^1.7.5",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/ioredis": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.9.0",
    "@types/supertest": "^6.0.2",
    "@types/uuid": "^10.0.0",
    "@vitest/coverage-v8": "^2.1.8",
    "pino-pretty": "^13.1.3",
    "prisma": "^5.22.0",
    "supertest": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.3.3",
    "vitest": "^2.1.8"
  }
}
