{
  "name": "@pointlock/mobile",
  "version": "0.1.0",
  "private": true,
  "main": "expo-router/entry",
  "scripts": {
    "dev": "expo start",
    "android": "npx expo start --android",
    "ios": "npx expo start --ios",
    "web": "npx expo start --web",
    "build": "npx expo export",
    "lint": "eslint . --ext .ts,.tsx",
    "clean": "rm -rf .expo dist node_modules/.cache",
    "test:e2e": "maestro test .maestro/flows",
    "test:e2e:auth": "maestro test .maestro/flows/auth",
    "test:e2e:slip": "maestro test .maestro/flows/slip",
    "test:e2e:match": "maestro test .maestro/flows/match",
    "test:e2e:ios-se": "maestro test --device 'iPhone SE (3rd generation)' .maestro/flows",
    "test:e2e:ios-14": "maestro test --device 'iPhone 14' .maestro/flows",
    "test:e2e:ios-15-pro-max": "maestro test --device 'iPhone 15 Pro Max' .maestro/flows",
    "test:e2e:android-small": "maestro test --device 'Pixel_4a' .maestro/flows",
    "test:e2e:android-medium": "maestro test --device 'Pixel_6' .maestro/flows",
    "test:e2e:android-large": "maestro test --device 'Pixel_7_Pro' .maestro/flows",
    "test:e2e:matrix": "bash scripts/e2e-device-matrix.sh",
    "test:e2e:matrix:win": "powershell -ExecutionPolicy Bypass -File scripts/e2e-device-matrix.ps1"
  },
  "dependencies": {
    "@expo/metro-runtime": "~6.1.2",
    "@hookform/resolvers": "^5.2.2",
    "@pick-rivals/shared-types": "workspace:*",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-navigation/native": "^7.1.25",
    "@sentry/react-native": "^7.12.0",
    "@tanstack/react-query": "^5.60.5",
    "axios": "^1.7.7",
    "debug": "^4.4.3",
    "expo": "~54.0.29",
    "expo-blur": "~15.0.8",
    "expo-constants": "~18.0.12",
    "expo-dev-client": "~6.0.20",
    "expo-device": "~8.0.10",
    "expo-font": "~14.0.10",
    "expo-haptics": "~15.0.8",
    "expo-linear-gradient": "^15.0.8",
    "expo-linking": "~8.0.10",
    "expo-notifications": "~0.32.16",
    "expo-router": "~6.0.19",
    "expo-secure-store": "~15.0.8",
    "expo-splash-screen": "~31.0.12",
    "expo-status-bar": "~3.0.9",
    "expo-system-ui": "~6.0.9",
    "nativewind": "~2.0.11",
    "phosphor-react-native": "^3.0.3",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.68.0",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "5.6.2",
    "react-native-screens": "~4.16.0",
    "react-native-svg": "15.12.1",
    "react-native-web": "~0.21.2",
    "socket.io-client": "^4.8.3",
    "zod": "^3.23.8",
    "zustand": "^5.0.1"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@types/react": "~19.1.17",
    "tailwindcss": "3.3.2",
    "typescript": "^5.3.3"
  }
}
